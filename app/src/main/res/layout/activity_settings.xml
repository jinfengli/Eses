<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0EFF4"
    tools:context="com.example.lijinfeng.eses.activity.SettingsActivity">

    <include
        android:id="@+id/header"
        layout="@layout/common_action_bar" />

    <LinearLayout
        android:layout_below="@id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_set_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/common_item_style"
            android:text="@string/switch_theme" />

        <TextView
            android:id="@+id/tv_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/txt_feedback"
            style="@style/common_item_style" />

        <TextView
            android:id="@+id/tv_check_new_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/common_item_style"
            android:text="@string/check_new_version" />

        <TextView
            android:id="@+id/tv_backup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/common_item_style"
            android:text="备份"/>

    </LinearLayout>


</RelativeLayout>
